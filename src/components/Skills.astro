---
    import skills from '../data/skills.json';
---

<section class="container mx-auto my-24 px-8 lg:px-12 xl:px-0">

    <h2 class="text-center font-bold uppercase text-3xl heading">My Skills</h2>

    <ul class="grid grid-cols-2 gap-8 my-8 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-6 ">

        {skills.map(skill => {
            return  <li class="flex items-center justify-center gap-2 bg-slate-100 py-4 rounded-md">
                        <img src=`/languages/${skill.icon}` alt=`${skill.name} Logo` class="h-8 max-w-8">
                        <span class="uppercase font-medium text-sm">{skill.name.toUpperCase()}</span>
                    </li>
        })}

    </ul>
</section>
