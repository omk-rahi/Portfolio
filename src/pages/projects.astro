---
import ProjectCard from "../components/ProjectCard.astro";
import Layout from "../layouts/Layout.astro";

import projects from '../data/projects.json';

---
<Layout title="Projects">
    <div class="bg-gray-50 py-16 h-full min-h-dvh" id="projects">

    <h2 class="text-center text-2xl font-bold heading uppercase">My Projects</h2>
    <div class="container px-8 grid grid-cols-1 gap-8 my-8 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 mx-auto xl:px-0">
        {projects.map(project => <ProjectCard info={project}/>)}
    </div>
</div>
</Layout>

